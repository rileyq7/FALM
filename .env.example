# FALM Configuration

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# LLM API Keys (at least one recommended for SME context)
ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here

# ChromaDB Configuration
CHROMADB_MODE=local  # "local" or "cloud"
# For ChromaDB Cloud (get from https://www.trychroma.com):
CHROMADB_CLOUD_URL=your-instance.chromadb.io
CHROMADB_API_KEY=your_chromadb_api_key
CHROMADB_TENANT=default_tenant
CHROMADB_DATABASE=default_database

# Database
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=falm

# AWS (Optional - for S3 document storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_here
S3_BUCKET=your-bucket-name

# Data Paths
DATA_DIR=data
GRANTS_DIR=data/grants
